{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "docker:build": "docker build -t lifeos-garage-frontend .",
    "docker:run": "docker run -d -p 8020:8000 --name garage-frontend --rm -e VITE_API_URL=http://host.containers.internal:5120 -e VITE_UPLOADS_URL=http://host.containers.internal:5120 lifeos-garage-frontend",
    "podman:build": "podman build -t lifeos-garage-frontend .",
    "podman:run": "podman run -d -p 8020:8000 --name garage-frontend --rm -e VITE_API_URL=http://host.containers.internal:5120 -e VITE_UPLOADS_URL=http://host.containers.internal:5120 lifeos-garage-frontend"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.10",
    "daisyui": "npm:daisyui@^5.5.14",
    "clsx": "npm:clsx@^2.1.1",
    "tailwind-merge": "npm:tailwind-merge@^2.5.5",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "lucide-preact": "npm:lucide-preact@^0.460.0"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
