# syntax=docker/dockerfile:1.4
FROM denoland/deno:2.6.4 AS base

ARG GIT_REVISION
ENV DENO_DEPLOYMENT_ID=${GIT_REVISION}
ENV DENO_NODE_MODULES_DIR=auto

WORKDIR /app

# Copy dependency files first
COPY deno.json deno.lock ./
COPY vite.config.ts main.tsx utils.ts ./

# Install dependencies WITHOUT cache mount to avoid symlinking to ephemeral cache
# This ensures node_modules contains actual files that can be copied to the runtime stage
RUN deno install --allow-scripts

# Copy source code
COPY . .

# Build the application
# We can use cache here for the build process itself, as we don't copy the cache later
RUN --mount=type=cache,target=/deno-dir/cache,sharing=shared \
    DENO_DIR=/deno-dir/cache \
    deno task build

# Production stage
FROM denoland/deno:2.6.4 AS runtime

# Install curl for healthcheck defined in docker-compose.yml
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

ARG GIT_REVISION
ENV DENO_DEPLOYMENT_ID=${GIT_REVISION}
ENV DENO_NODE_MODULES_DIR=auto

WORKDIR /app

# Copy built artifacts and runtime files
COPY --from=base /app/_fresh ./_fresh
COPY --from=base /app/deno.json ./
COPY --from=base /app/deno.lock ./
COPY --from=base /app/islands ./islands
COPY --from=base /app/routes ./routes
COPY --from=base /app/static ./static
COPY --from=base /app/main.tsx ./

# Copy node_modules from build stage
COPY --from=base /app/node_modules ./node_modules

EXPOSE 8000

CMD ["deno", "serve", "-A", "_fresh/server.js"]