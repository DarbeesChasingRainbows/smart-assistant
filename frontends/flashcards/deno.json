{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "docker:build": "docker build --build-arg GIT_REVISION=$(git rev-parse HEAD 2>/dev/null || echo 'local') -t flashcards-frontend .",
    "docker:run": "docker run -d --name flashcards-app -p 8000:8000 -e VITE_API_URL=http://host.docker.internal:5120 -e VITE_UPLOADS_URL=http://host.docker.internal:5120 --restart unless-stopped flashcards-frontend",
    "podman:build": "podman build --build-arg GIT_REVISION=$(git rev-parse HEAD 2>/dev/null || echo 'local') -t flashcards-frontend .",
    "podman:run": "podman run -d --name flashcards-app -p 8000:8000 -e VITE_API_URL=http://host.containers.internal:5120 -e VITE_UPLOADS_URL=http://host.containers.internal:5120 --restart unless-stopped flashcards-frontend",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    },
    "exclude": [
      "playwright.config.ts",
      "tests/e2e/**"
    ]
  },
  "exclude": [
    "**/_fresh/*",
    "playwright.config.ts",
    "tests/e2e/**"
  ],
  "imports": {
    "@/": "./",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.10",
    "marked": "npm:marked@^9.1.2",
    "daisyui": "npm:daisyui@latest"
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
